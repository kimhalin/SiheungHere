<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="@dimen/info_icon_size"
            android:layout_height="@dimen/info_icon_size"
            android:layout_margin="@dimen/info_icon_margin"
            android:src="@drawable/icon_wifi"></ImageView>

        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/info_title_margin"
            android:text="포인트 지점명"
            android:textSize="@dimen/info_title_textsize"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginVertical="4dp"
        android:background="#DD8503" />

    <ImageView
        android:id="@+id/info_image"
        android:layout_width="@dimen/info_image_width"
        android:layout_height="@dimen/info_image_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/info_image_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/info_detailBox_marginvertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/info_smallicon_size"
                android:layout_height="@dimen/info_smallicon_size"
                android:background="@drawable/info_location"
                android:layout_marginRight="@dimen/info_smallicon_marginright" />
            <TextView
                android:id="@+id/info_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/info_detail_textsize"
                android:text="포인트 지점 주소" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/info_smallicon_size"
                android:layout_height="@dimen/info_smallicon_size"
                android:background="@drawable/info_phone"
                android:layout_marginRight="@dimen/info_smallicon_marginright" />
            <TextView
                android:id="@+id/info_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/info_detail_textsize"
                android:text="064-0000-0000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/info_smallicon_size"
                android:layout_height="@dimen/info_smallicon_size"
                android:background="@drawable/info_distance"
                android:layout_marginRight="@dimen/info_smallicon_marginright" />
            <TextView
                android:id="@+id/info_dist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/info_detail_textsize"
                android:text="2km" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/info_CloseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/info_button_margintop"
        android:gravity="center"
        android:text="닫기"
        app:backgroundTint="#DD8503"></Button>
</LinearLayout>