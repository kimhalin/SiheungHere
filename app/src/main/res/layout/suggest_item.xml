<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <!--건의글 아이템 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/suggestList_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:text=""
        android:textSize="14dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="17dp"
        android:layout_height="18dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/map_point" />

    <TextView
        android:id="@+id/suggestList_addr"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:text=""
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/info_detail_textsize" />

    <ImageView
        android:layout_width="@dimen/info_icon_size"
        android:layout_height="@dimen/info_icon_size"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/etc_agree"/>

    <TextView
        android:id="@+id/suggestList_agreeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:textSize="13dp"
        android:text="0" />
    </LinearLayout>

</androidx.cardview.widget.CardView>



