<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 건의 내용 게시판 -->
    <LinearLayout
        android:id="@+id/suggestList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!--타이틀바-->
        <include layout="@layout/main_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="건의글 목록"
            android:textSize="20dp"
            android:layout_margin="20dp"/>

        <!--스크롤바-->
       <include layout="@layout/main_icon_scroll"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/suggest_recycler"
                android:layout_width="match_parent"
                android:layout_height="550dp">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="center">


                <ImageButton
                    android:id="@+id/newSuggestBtn"
                    style="@style/scrollBar_iconStyle"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/etc_plus">
                </ImageButton>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 건의 내용 작성 -->
    <LinearLayout
        android:id="@+id/suggestWrite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <!--타이틀바-->
        <include layout="@layout/main_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새 건의글 작성"
            android:textSize="20sp"
            android:layout_margin="20dp"/>


        <!-- 자원종류 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자원 종류"
                    android:textSize="20sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/iconEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="자원을 설정해 주세요."
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:focusable="false"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 위치 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치"
                    android:textSize="20sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/mapEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="위치를 설정해 주세요."
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:focusable="false"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 건의사유 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="건의 사유"
                    android:textSize="20sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/memoEdit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:hint="내용 작성"
                    android:textSize="20sp"
                    android:maxLength="100"/>
                <TextView
                    android:id="@+id/memoLimit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0/100"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 비밀번호 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="20sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/pwEdit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:hint="비밀번호를 입력하세요."
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="textPassword"
                    android:maxLength="20"/>
                <TextView
                    android:id="@+id/pwLimit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0/20"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 작성 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#DD8503"
                android:text="작성"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>