<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 건의 내용 게시판 -->
    <LinearLayout
        android:id="@+id/suggestList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!--타이틀바-->
        <include layout="@layout/main_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="건의글 목록"
            android:textSize="20dp"
            android:layout_margin="20dp"/>

        <!--스크롤롤바-->
       <include layout="@layout/main_icon_scroll"/>

        <!--건의글 리스트-->
        <ListView
            android:id="@+id/suggestListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
        </ListView>

        <!--페이징-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">

            <com.lakue.pagingbutton.LakuePagingButton
                android:id="@+id/paging_btnList"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

                    <!--이전 페이지 번호-->
<!--                    <ImageButton-->
<!--                        android:layout_width="@dimen/previous_next_icon"-->
<!--                        android:layout_height="@dimen/previous_next_icon"-->
<!--                        android:scaleType="centerCrop"-->
<!--                        android:layout_toLeftOf="@id/paging_btnList"-->
<!--                        android:background="@color/white"-->
<!--                        android:src="@drawable/etc_page_previous"/>-->

                    <!--다음 페이지 번호-->
<!--                    <ImageButton-->
<!--                        android:layout_width="@dimen/previous_next_icon"-->
<!--                        android:layout_height="@dimen/previous_next_icon"-->
<!--                        android:scaleType="centerCrop"-->
<!--                        android:layout_toRightOf="@id/paging_btnList"-->
<!--                        android:background="@color/white"-->
<!--                        android:src="@drawable/etc_page_next"/>-->

        </RelativeLayout>

        <!--페이징-->





    </LinearLayout>

    <!-- 건의 내용 작성 -->
    <LinearLayout
        android:id="@+id/suggestWrite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새 건의글 작성"
            android:textSize="20dp"
            android:layout_margin="20dp"/>

        <!-- 스크롤 뷰 -->
        <include layout="@layout/main_icon_scroll"/>

        <!-- 자원종류 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자원 종류"
                    android:textSize="20dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="와이파이"
                    android:textSize="20dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 위치 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치"
                    android:textSize="20dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="경기도 시흥시"
                    android:textSize="20dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 건의사유 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="건의 사유"
                    android:textSize="20dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="만들어 주세요."
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 비밀번호 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="20dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="****"
                    android:textSize="20dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 작성 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#DD8503"
                android:text="작성"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>